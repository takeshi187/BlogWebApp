@using BlogWebApp.ViewModels
@model ArticleViewModel

@{
    ViewData["Title"] = Model?.Title ?? "Пост";
}

<section class="blog-header">
    <h1>@Model.Title</h1>
</section>

<div class="card mt-4 mb-4">
    @if (!string.IsNullOrWhiteSpace(Model.Image))
    {
        <img src="@Model.Image" class="card-img-top article-image" alt="Article image" />
    }

    <div class="card-body">
        <p class="text-muted mb-2">
            Жанр: <strong>@Model.GenreName</strong> |
            Дата: <strong>@Model.CreatedAt.ToShortDateString()</strong>

            @if (Model.UpdatedAt.HasValue)
            {
                <span class="ms-2">
                    (ред. @Model.UpdatedAt.Value.ToShortDateString())
                </span>
            }
        </p>

        <p class="article-content">
            @Html.Raw(Model.Content)
        </p>

        <div class="mb-4">
            <strong>Лайков:</strong> @Model.LikesCount
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Like"
                      asp-action="ToggleLike"
                      method="post"
                      class="d-inline">

                    @Html.AntiForgeryToken()
                    <input type="hidden" name="articleId" value="@Model.ArticleViewModelId" />

                    <button type="submit"
                            class="btn btn-sm @(Model.UserHasLiked ? "btn-danger" : "btn-outline-danger")">
                        @(Model.UserHasLiked ? "Убрать лайк" : "Лайк")
                    </button>
                </form>
            }
            else
            {
                <p>Чтобы поставить лайк, <a href="@Url.Action("Login", "Account")">войдите в систему</a>.</p>
            }
        </div>

        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <div class="mb-3">
                <a asp-controller="Article"
                       asp-action="Edit"
                       asp-route-id="@Model.ArticleViewModelId"
                       class="btn btn-warning me-2">
                    Редактировать
                </a>

                <form asp-controller="Article"
                      asp-action="Delete"
                      method="post"
                      class="d-inline"
                      onsubmit="return confirm('Удалить статью? Все комментарии и лайки тоже будут удалены.')">

                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.ArticleViewModelId" />

                    <button type="submit" class="btn btn-danger">Удалить</button>
                </form>

                <a asp-controller="Blog"
                       asp-action="Index"
                       class="btn btn-secondary mt-4">
                    Назад к списку
                </a>
            </div>
        }
        else
        {
            <a asp-controller="Blog"
                   asp-action="Index"
                   class="btn btn-secondary mt-4">
                Назад к списку
            </a>
        }
    </div>
</div>

<hr />

<h3>Комментарии</h3>

@if (Model.Comments == null || !Model.Comments.Any())
{
    <p class="text-muted">Пока нет комментариев.</p>
}
else
{
    foreach (var comment in Model.Comments)
    {
        <div class="card mb-3">
            <div class="card-body">
                <p class="mb-1">
                    <strong>@comment.UserName</strong>
                    <span class="text-muted">(@comment.CreatedAt.ToShortDateString())</span>
                </p>

                <p class="mb-2">@comment.Content</p>

                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <form asp-controller="Comment"
                          asp-action="Delete"
                          method="post"
                          class="d-inline"
                          onsubmit="return confirm('Удалить комментарий?');">

                        @Html.AntiForgeryToken()
                        <input type="hidden" name="commentId" value="@comment.CommentId" />
                        <input type="hidden" name="articleId" value="@Model.ArticleViewModelId" />

                        <button type="submit" class="btn btn-danger btn-sm">
                            Удалить
                        </button>
                    </form>
                }
            </div>
        </div>
    }
}

@if (TempData["CommentError"] != null)
{
    <div class="text-danger mb-2">@TempData["CommentError"]</div>
}

@if (User.Identity.IsAuthenticated)
{
    <h4 class="mt-4">Оставить комментарий</h4>

    <form asp-controller="Comment"
          asp-action="AddComment"
          method="post">

        <input type="hidden"
               name="articleId"
               value="@Model.ArticleViewModelId" />

        <div class="mb-3">
            <textarea name="Content"
                  class="form-control"
                  rows="4"
                  required
                  maxlength="500"></textarea>
        </div>

        <button type="submit"
                class="btn btn-secondary">
            Отправить
        </button>
    </form>
}
else
{
    <p class="mt-4">
        Чтобы оставить комментарий,
        <a asp-controller="Account" asp-action="Login">войдите в систему</a>.
    </p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}