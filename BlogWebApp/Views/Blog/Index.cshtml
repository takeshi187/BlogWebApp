@{
    ViewData["Title"] = "Блог";
}

<section class="blog-header">
    <h1>Блог</h1>
    <p class="subtitle">Статьи, заметки, мысли о разработке и не только</p>
</section>

<div class="blog-container">
    <aside class="sidebar">
        <div class="widget">
            <h3>Категории</h3>
            <ul>
                <li>ASP.NET</li>
                <li>Тестирование</li>
            </ul>
        </div>

        <div class="widget">
            <h3>Поиск</h3>
            <input class="search-input" type="text" placeholder="Найдется почти всё..." />
        </div>
    </aside>
</div>

<style>
    .blog-header {
        text-align: center;
        padding: 40px 0;
    }

    .subtitle {
        color: #666;
    }

    .blog-container {
        display: flex;
        gap: 30px;
    }

    .posts-list {
        flex: 3;
    }

    .post-card {
        background: #fff;
        padding: 20px;
        margin-bottom: 25px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    .post-title {
        margin-bottom: 10px;
        font-size: 26px;
    }

    .post-meta {
        font-size: 14px;
        color: #999;
        margin-bottom: 15px;
    }

    .post-preview {
        color: #444;
        margin-bottom: 15px;
    }

    .read-more {
        font-weight: bold;
        text-decoration: none;
        color: #276ef1;
    }

    .sidebar {
        flex: 1;
    }

    .widget {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        margin-bottom: 20px;
    }

        .widget ul {
            list-style: none;
            padding: 0;
        }

        .widget li {
            margin-bottom: 5px;
            color: #555;
        }

    .search-input {
        width: 100%;
        padding: 8px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }
</style>