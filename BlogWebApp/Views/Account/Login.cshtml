@model BlogWebApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Вход</h2>

<form asp-action="Login" method="post">
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Пароль</label>
        <input asp-for="Password" type="password" />
    </div>
    <div>
        <input asp-for="RememberMe" type="checkbox" /> Запомнить меня
    </div>
    <button type="submit">Войти</button>
</form>
